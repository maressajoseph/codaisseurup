<!DOCTYPE html>
<html>
  <head>
    <title>Codaisseurup</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
  <div class="container">
    <br><br><br>
    <footer>
       <hr>
       <div class="col-md-10">
       <p>&copy; CodaisseurUp</p>
     </div>
     <div class="col-md-2">
       <p><%= link_to "Terms and conditions", terms_path, class: "btn" %></p>
     </div>
    </footer>
  </div>
</html>
